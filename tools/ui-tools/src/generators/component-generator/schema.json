{
  "$schema": "https://json-schema.org/schema",
  "$id": "ComponentGenerator",
  "title": "name",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the given component.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "type": {
      "type": "string",
      "description": "The type of the component that will be created.",
      "x-prompt": {
        "message": "Which type will this component have?",
        "type": "list",
        "items": [
          {
            "value": "components",
            "label": "Basic Component"
          },
          {
            "value": "pages",
            "label": "Page Component"
          },
          {
            "value": "layouts",
            "label": "Layout Component"
          }
        ]
      }
    },
    "library": {
      "type": "string",
      "description": "The library where the component will be located.",
      "x-prompt": {
        "message": "Which library will this component be located in?",
        "type": "list",
        "items": [
          {
            "value": "libs/ui",
            "label": "UI Library"
          },
          {
            "value": "libs/presentation",
            "label": "Presentation Library"
          }
        ]
      }
    }
  },
  "required": ["name", "library"]
}
